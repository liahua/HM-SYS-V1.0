<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hm.sys.dao.SysUsersDao" >
  
   <!-- 根据deptId查询部门人数 -->
  <select id="getCountByDeptId" parameterType="int" resultType="int">
	
	select count(*) from sys_users where deptId=#{id}
	</select>
</mapper>